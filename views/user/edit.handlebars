<div class="jumbotron">
   <form action="/user/edit?_method=PUT" method="POST">
    <input type="hidden" name="_method" value="_PUT">
      <h1>Editar Post</h1>
         <label for="legenda" class="lead">Insira uma legenda</label>
         <input type="text" name="legenda" id="legenda" class="form-control" value="{{post.caption}}">
      </div>
      <div class="form-check">
         <input type="checkbox" class="form-check-input" id="check">
         <label class="form-check-label" for="check" name="allowComments">Permitir comentarios</label>
      </div>
      <div class="form-group">
         <button type="submit" class="btn btn-primary">
            Postar
         </button>
      </div>
   </form>
</div>